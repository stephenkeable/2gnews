<div id='news'>
    <h2><a href="/news">News</a></h2>
    {{#each news_items}}
    {{#if @first}}
    <div class="lead">
        {{#if fields.thumbnail}}
        <a href="{{ webUrl }}/amp"><img src="https://img.2gnews.com/placeholder.png" data-src="{{fields.thumbnail}}" alt="{{webTitle}}"></a>
        {{/if}}
        <p><strong>{{webTitle}}</strong><br>
        {{striptags fields.trailText}}<br>
        <a href="{{ webUrl }}/amp">Read more &raquo;</a></p>
    </div>
    <ul class="news-list">
        {{else}}
        <li>
        <p><strong>{{webTitle}}</strong><br>
        <a href="{{ webUrl }}/amp">Read more &raquo;</a></p>
    </li>
        {{#if @last}}</ul>{{/if}}
        {{/if}}
    {{/each}}
    <ul class='section-list'>
        <li><a href="/news/india">India</a></li>
        <li><a href="/news/uk">UK</a></li>
        <li><a href="/news/world">World</a></li>
        <li><a href="/news/politics">Politics</a></li>
        <li><a href="/news/tech">Technology</a></li>
        <li><a href="/news/science">Science</a></li>
        <li><a href="/news/business">Business</a></li>
        <li><a href="/news/money">Money</a></li>
    </ul>
</div>
